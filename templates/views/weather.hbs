<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Get Weather!</title>

    {{>headlinks}}

  </head>
  <body>

    {{>navbar}}

    <!-- main page header -->

    <div class="container-fluid main-header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <form class="temp_form ">

                        <input type="text" id="cityName" placeholder="Search City" autocomplete="off">
                        <br>
                        <input type="submit" value="Search" id="submitBtn">
                        <p id="temp_err" class="{{api}}"></p>

                    </form>

                    <div class="tempInformation  ">
                        
                        <div class="main_layer">
                            <p id="city_name">Get Weather here </p>
                            <div class="middle_layer data_hide">
                                <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                                <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                            </div>
                        </div>
                    </div>
        </div>
      </div>
    </div>

    <!-- footer -->

    {{>footer}}

    <!--Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script src="js/index.js"></script>
  </body>
</html>